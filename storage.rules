rules_version = '2';

// Firebase Storage Security Rules for Gita App
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate image file
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') 
        && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // User profile pictures
    match /users/{userId}/profile.{extension} {
      // Anyone can read profile pictures
      allow read: if true;
      
      // Only the user can upload/update their own profile picture
      // Must be an image and under 5MB
      allow write: if isOwner(userId) && isValidImage();
    }
    
    // User achievement badges (generated by backend/admin)
    match /badges/{userId}/{badgeId}.png {
      // Anyone can read badges
      allow read: if true;
      
      // Only backend/admin can write (for now, deny all writes)
      allow write: if false;
    }
    
    // Chapter images and resources (managed by admin)
    match /chapters/{chapterId}/{resource} {
      // Anyone can read chapter resources
      allow read: if true;
      
      // Only admins can upload (deny for now, use Firebase Console)
      allow write: if false;
    }
    
    // Lesson images and resources (managed by admin)
    match /lessons/{lessonId}/{resource} {
      // Anyone can read lesson resources
      allow read: if true;
      
      // Only admins can upload (deny for now, use Firebase Console)
      allow write: if false;
    }
    
    // App assets (icons, backgrounds, etc.)
    match /assets/{assetPath=**} {
      // Anyone can read app assets
      allow read: if true;
      
      // Only admins can upload assets
      allow write: if false;
    }
    
    // User generated content (notes, bookmarks, etc.)
    match /user-content/{userId}/{contentId} {
      // User can read their own content
      allow read: if isOwner(userId);
      
      // User can create/update their own content
      // Must be under 10MB
      allow write: if isOwner(userId) && request.resource.size < 10 * 1024 * 1024;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
